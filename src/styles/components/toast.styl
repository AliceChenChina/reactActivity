@require '../mixins'

.toast-wrapper
    width: 100%
    position: fixed
    bottom: r(208)
    text-align: center
    z-index: 30

    .toast
        padding: r(10) r(20)
        line-height: 1.8
        color: #fff
        font-size: r(24)
        background-color: #333
        display: inline-block
        border-radius: r(50)
        box-shadow: 0 0 15 rgba(3, 6, 14, .2)
        -webkit-box-shadow: 0 0 15 rgba(3, 6, 14, .2)
