@require '../mixins'

.page-demos
    height: 100%
    min-height: 100%
    display: flex
    flex-direction: column
    align-items: center

    .btns
        padding-top: r(200)

    .btn-box
        padding-top: r(20)
        padding-bottom: r(20)

    .btn
        height: r(70)
        padding-left: 1em
        padding-right: 1em
        background-color: #00d8ff
        border: 1px solid transparent
        text-align: center
        display: inline-block
        border-radius: r(50)
        color: #fff
        font-size: r(30)

        &.btn-hollow
            border-color: #00d8ff
            background-color: inherit
            color: #00d8ff

    .btn-hollow
        width: r(500)
